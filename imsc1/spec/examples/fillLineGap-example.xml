<?xml version="1.0" encoding="UTF-8"?>
<tt xmlns="http://www.w3.org/ns/ttml"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter"
    xmlns:tts="http://www.w3.org/ns/ttml#styling"
	xmlns:ebutts="urn:ebu:tt:style"
	xmlns:itts="http://www.w3.org/ns/ttml/profile/imsc1#styling"
    xml:lang="en" >
    <head>
        <styling>
            <style xml:id="paragraphStyle"
                tts:fontFamily="proportionalSansSerif"
                tts:fontSize="100%" 
                tts:lineHeight="150%"
                tts:textAlign="center"
                ebutts:linePadding="0.5c"/>
            <style xml:id="spanStyle"
                tts:color="#FFFFFF"
                tts:backgroundColor="#000000"/>
        </styling>
        <layout>
		    <region xml:id="topRegion"
                tts:origin="15% 15%"
                tts:extent="70% 24%"
                tts:displayAlign="after"/>
            <region xml:id="bottomRegion"
                tts:origin="15% 60%"
                tts:extent="70% 24%"
                tts:displayAlign="after"/>
        </layout>
    </head>
    <body>
        <div begin="00:00:00.000" end="00:00:20.000">
		    <p region="topRegion" style="paragraphStyle">
                <span style="spanStyle">Beware the Jubjub bird, and shun</span><br/>
                <span style="spanStyle">The frumious Bandersnatch!</span>
            </p>
            <p region="bottomRegion" style="paragraphStyle" itts:fillLineGap="true">
                <span style="spanStyle">Beware the Jubjub bird, and shun</span><br/>
                <span style="spanStyle">The frumious Bandersnatch!</span>
            </p>
        </div>
    </body>
</tt>
